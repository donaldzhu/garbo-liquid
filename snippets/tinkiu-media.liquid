{% liquid
  assign type = data.type | default: type
  assign url = data.url | default: url
  assign alt = data.meta.alt | default: alt
  assign control = control | default: false
%}


{% if type == 'image' %}
  <img
    src="{{ url }}"
    alt="{{ alt }}"
    class="tinkiu-media" />
{% elsif type == 'video' %}
  <video
    class="tinkiu-media"
    {% if control %}
    controls
    {% endif %}
    src="{{ url }}"
    autoplay
    muted
    loop></video>
{% endif %}