{% assign metaobj = shop.metaobjects['app--6007307--sanity-documents-stories'].values %}
{% assign tempKey = 'a12a78aa-fd7b-4736-b786-b8ce858d7b50' %}


<div class="tinkiu-story-container">
  <div class="tinkiu-story">
    {% for o in metaobj -%}
      {% if o._system.value.base.id == tempKey %}
        {% render 'tinkiu-section-header'
          , title: o.title.value
          , secondaryTitle: o.category %}
        <div class="tinkiu-story__hero-media">
          {% render 'tinkiu-media'
            , data: o.content.value.heroMedia %}
        </div>
        <div class="tinkiu-story__folio {% if true %}tinkiu-story__folio--with-product{% endif %}">
          {% if true %}
            {% assign id = o.associated | remove: "gid://shopify/Product/" | times: 1 %}
            {% render 'tinkiu-product-insert'
              , id: id
              , size: 'small'
              , imageCount: 2 %}
          {% endif %}
          <div class="tinkiu-story__details-container">
            <div class="tinkiu-story__details">
              {% for credit in o.secondaryCredits.value %}
                <div class="tinkiu-story__detail">
                  <p>{{ credit.role }}</p>
                  <p>{{ credit.name }}</p>
                </div>
              {% endfor %}
              <div class="tinkiu-story__detail">
                <p>Date</p>
                <p>{{ o.date | date: '%B %d, %Y' }}</p>
              </div>
            </div>
            <p class="tinkiu-story__description">
              {{ o.description }}
            </p>
          </div>
        </div>

        {% render 'tinkiu-dot' %}
        <div class="tinkiu-portable-text">
          {% render 'portable-text'
            , portableText: o.content.value.blockContent %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
{% schema %}
  {
    "name": "Tinkiu Story",
    "settings": []
  }
{% endschema %}